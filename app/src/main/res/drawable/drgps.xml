<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            >
            <gradient
                android:startColor="#48EAFC"
                android:endColor="#116B9A"
                android:angle="45"
                />
            <corners
                android:radius="3dp"
                />
            <size
                android:width="25dp"
                android:height="34dp"
                />
        </shape>

    </item>
    <item
        android:drawable="@drawable/search"
        android:right="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:top="10dp"
        >
    </item>



</layer-list>