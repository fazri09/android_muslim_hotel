<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"



    >
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="344dp"
        android:layout_height="559dp"
        android:background="@drawable/dialogboxgradient">
        <TextView
            android:id="@+id/dialogtv1"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="22dp"
            android:textColor="@color/white"
            android:fontFamily="@font/bestrong"
            android:textSize="31dp"
            android:textAlignment="center"
            android:layout_width="299dp"
            android:layout_height="63dp"
            android:text="Hotel Halal Features"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/linedialog1"
            android:layout_below="@id/dialogtv1"
            android:layout_width="344dp"
            android:layout_height="7dp"
            android:background="@drawable/roundedlinedialog"
            />
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/linedialog1"
            android:layout_width="334dp"
            android:layout_height="473dp"
            android:background="@drawable/roundedboxdialogwhite"
            >
            <LinearLayout
                android:id="@+id/layoutdialog1"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/food"
                    />
                <LinearLayout
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Halal Food"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:text="Find Hotel That Have 100% Halal Food"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutdialog2"
                android:layout_below="@id/layoutdialog1"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/noa"
                    />
                <LinearLayout
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="No Alcohol Environment"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:text="Find Hotel Without Alcohol Environment"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutdialog3"
                android:layout_below="@id/layoutdialog2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/beach"
                    />
                <LinearLayout
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="15.5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Beaches and Pool Only For Women or Your Family"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/bahnschrift"
                        android:textSize="13dp"
                        android:textColor="#000000"
                        android:text="There are some hotel that have pool and beaches for your family"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:fontFamily="@font/bahnschrift"
                android:textSize="19dp"
                android:textColor="@color/white"
                android:elevation="8dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:layout_below="@id/layoutdialog3"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:text="OK"
                android:background="@drawable/buttondialog1"
                />
            <TextView
                android:id="@+id/tvunderline"
                android:drawableRight="@drawable/drhelpbrown"
                android:textStyle=""
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_width="310dp"
                android:layout_height="24dp"
                android:textSize="20dp"
                android:fontFamily="@font/bahnschrift"
                android:textColor="#605F5F"
                android:text="What is Hotel Halal Features"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>