<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="559dp"
    android:layout_width="324dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    app:cardCornerRadius="3dp"
    android:id="@+id/cvdial"

    android:background="@drawable/dialogboxgradient"
    >
    <RelativeLayout

        android:background="@drawable/dialogboxgradient"
        android:id="@+id/rltrans"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"

        android:layout_width="324dp"
        android:layout_height="559dp">

        <!--    <RelativeLayout-->
        <!--        android:layout_centerVertical="true"-->
        <!--        android:layout_centerHorizontal="true"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent"-->
        <!--        android:layout_centerInParent="true"-->
        <!--        android:background="@drawable/dialogboxgradient">-->

        <TextView
            android:id="@+id/dialogtv1"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="22dp"
            android:fontFamily="@font/bestrong"
            android:text="Hotel Halal Features"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/linedialog1"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_below="@id/dialogtv1"
            android:background="@drawable/roundedlinedialog" />

        <RelativeLayout
            android:layout_width="324dp"
            android:layout_height="473dp"
            android:layout_below="@id/linedialog1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"

            android:background="@drawable/roundedboxdialogwhite">

            <LinearLayout
                android:id="@+id/layoutdialog1"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/food" />

                <LinearLayout
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/bahnschrift"
                        android:text="Halal Food"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="Find Hotel That Have 100% Halal Food"
                        android:textColor="#000000"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdialog2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/layoutdialog1"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_marginLeft="27dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/noa" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="No Alcohol Environment"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="Find Hotel Without Alcohol Environment"
                        android:textColor="#000000"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutdialog3"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/layoutdialog2"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_marginLeft="9dp"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:src="@drawable/beach" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="215dp"
                    android:layout_height="110dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="Beaches and Pool Only For Women or Your Family"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="There are some hotel that have pool and beaches for your family"
                        android:textColor="#000000"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_below="@id/layoutdialog3"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/buttondialog1"
                android:elevation="8dp"
                android:fontFamily="@font/bahnschrift"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="19dp" />

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvunderline"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="@font/bahnschrift"
                    android:text="What is Hotel Halal Features"
                    android:textAlignment="center"
                    android:textColor="#605F5F"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drhelpbrown" />
            </LinearLayout>
        </RelativeLayout>
        <!--    </RelativeLayout>-->

    </RelativeLayout>

</RelativeLayout>
