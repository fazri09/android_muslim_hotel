<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">


        <RelativeLayout
            android:id="@+id/toolbar_atas"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:background="@drawable/background_toolbar_home">

            <TextView
                android:fontFamily="@font/bestrong"
                android:id="@+id/muslimtravl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:text="Muslim Travel"
                android:textColor="@android:color/white"
                android:textSize="37dp" />

            <TextView
                android:id="@+id/whtw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/muslimtravl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="What are you looking for?"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/whtw"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="Search"
                        android:textColor="#111111"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ic_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/search" />

                    <EditText
                        android:id="@+id/etintent"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/ic_search"
                        android:background="@null"
                        android:hint="Enter your keywords"
                        android:singleLine="true"
                        android:textColorHint="#111111"
                        android:textSize="15dp"

                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_atas"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/btnMiniMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn_minimaps">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Mini Apps"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnMiniMaps">

                    <RelativeLayout

                        android:id="@+id/halalfoodrelative"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/btnHalalFood"
                            android:layout_width="44dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/test2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_restoran" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnHalalFood"
                            android:layout_marginTop="5dp"
                            android:text="Halal Food"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mosquerelative"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:layout_toRightOf="@+id/halalfoodrelative">

                        <LinearLayout
                            android:id="@+id/btnMosque"
                            android:layout_width="44dp"
                            android:layout_height="46dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/test2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_mosque" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnMosque"
                            android:layout_marginTop="5dp"
                            android:text="Mosque"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/jam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:text="15:00"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_toLeftOf="@+id/jam"
                        android:text="Adzan Ashar"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="29dp"
            android:text="PROMO"
            android:textColor="#111111"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rV1"
            android:layout_below="@+id/tv_promo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"

            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/tv_promo"
            />

<!--        <ImageView-->
<!--            android:id="@+id/gambar_promo"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/tv_promo"-->
<!--            android:layout_marginLeft="11dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:src="@drawable/promo1" />-->

        <TextView
            android:id="@+id/tv_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewpager"
            android:layout_marginLeft="18dp"
            android:text="Best Places To \nTravel In December"
            android:textColor="#48C1FF"
            android:textSize="36dp" />

        <View
            android:id="@+id/view_best"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_best"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_best"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="35dp"
            android:text="EDITOR’S PICKS"
            android:textColor="#111111"
            android:textSize="15dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rV2"
            android:layout_below="@+id/tv_editor"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"


            />
        <View
            android:id="@+id/view_best2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rV2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="#EFEFEF" />
        <TextView
            android:id="@+id/tv_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_best2"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="35dp"
            android:text="DISCOVER HOTELS NEAR YOU"
            android:textColor="#111111"
            android:textSize="15dp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rV3"
            android:layout_below="@+id/tv_discover"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="400dp"


            />
        <View
            android:id="@+id/view_best3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rV3"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_best3"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="35dp"
            android:text="AUTHOR'S CHOICE"
            android:textColor="#111111"
            android:textSize="15dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rV4"
            android:layout_below="@+id/tv_authors"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="300dp"


            />
    </RelativeLayout>
</ScrollView>

