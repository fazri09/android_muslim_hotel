<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="190dp"
    android:layout_height="300dp">
    
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="170dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/imageacid"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@drawable/achotelimage"
            android:src="@drawable/achotel"
            />
        <TextView
            android:id="@+id/tvcardac2"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageacid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bahnschrift"
            android:textColor="#111111"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="Halekulani"
            />
        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvcardac2"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_review"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/bahnschrift"
                android:textSize="13dp"
                android:textColor="#000000"
                android:text="(190) Review"
                />
            <TextView
                android:id="@+id/gradbox"
                android:layout_marginLeft="3dp"
                android:layout_width="22dp"
                android:layout_height="14dp"
                android:background="@drawable/tvboxgradac"
                android:textColor="@color/whiteff"
                android:fontFamily="@font/bahnschrift"
                android:textSize="10dp"
                android:text="9.0"
                android:textAlignment="center"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tempat"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ll_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:fontFamily="@font/bahnschrift"
            android:textSize="15dp"
            android:text="Hawaii"
            />
    </RelativeLayout>


</LinearLayout>