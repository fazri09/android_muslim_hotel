<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/carview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >

        <ImageView
            android:id="@+id/iv_gambar_hotel"
            android:layout_width="150dp"
            android:layout_height="230dp"
            android:scaleY="1.9"
            android:scaleX="1.9"
            android:scaleType="centerCrop"
            android:src="@drawable/editor1"/>
        <RelativeLayout
            android:id="@+id/gambar"
            android:layout_width="150dp"
            android:layout_height="235dp"
            android:background="@drawable/background_editor">
            <TextView
                android:id="@+id/tv_tempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="15dp"
                android:text="Phulay Bay"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carview"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="(235) Review " />
        <TextView
            android:id="@+id/gradbox"
            android:layout_marginLeft="3dp"
            android:layout_width="22dp"
            android:layout_height="15dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/carview"
            android:layout_toRightOf="@+id/review"
            android:background="@drawable/tvboxgradac"
            android:textColor="@color/whiteff"
            android:fontFamily="@font/bahnschrift"
            android:textSize="10dp"
            android:text="9.0"
            android:textAlignment="center"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:textSize="17dp"
            android:textColor="#111111"
            android:layout_marginLeft="3dp"
            android:text="Hawaii " />
    </RelativeLayout>
</RelativeLayout>