    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectanglehor"
                android:scaleType="centerCrop"
                android:scaleX="10"
                android:scaleY="10" />

            <TextView
                android:id="@+id/TVProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bahnschrift"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/CA"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/circleavatar"
            android:elevation="10dp"
            android:src="@drawable/useravatar" />

        <TextView
            android:id="@+id/TVNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CA"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/bahnschrift"
            android:text="Akhmad Rafli"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn1"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_below="@id/TVNAME"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="11dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:drawableLeft="@drawable/dledit"
                android:drawableRight="@drawable/drarrow"
                android:fontFamily="@font/bahnschrift"
                android:text="Edit Profile"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="17dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn2"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="11dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/btn1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:drawableLeft="@drawable/dlphone"
                android:drawableRight="@drawable/drarrow"
                android:fontFamily="@font/bahnschrift"
                android:text="Contact Us"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="17dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn3"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="11dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbutton"
                android:drawableLeft="@drawable/dlpartnership"
                android:drawableRight="@drawable/drarrow"
                android:fontFamily="@font/bahnschrift"
                android:text="Partnership"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="17dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="22dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbuttoncyan"
                android:drawableRight="@drawable/drhelp"
                android:fontFamily="@font/bahnschrift"
                android:text="Need Help"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="21dp" />
        </androidx.cardview.widget.CardView>

